<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="85dp">

        <ScrollView
            android:id="@+id/school_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <TextView
                        android:text="Name: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/school_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp" />

                    <EditText
                        android:hint="Name"
                        android:id="@+id/school_name_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:inputType="textCapWords"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <TextView
                        android:text="Year: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/school_year_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp" />

                    <EditText
                        android:hint="Year"
                        android:id="@+id/school_year_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:inputType="number"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <TextView
                        android:text="Major: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/school_major_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp" />

                    <EditText
                        android:hint="Major"
                        android:id="@+id/school_major_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:inputType="textCapWords"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <TextView
                        android:text="Minor: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/school_minor_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp" />

                    <EditText
                        android:hint="Minor"
                        android:id="@+id/school_minor_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:inputType="textCapWords"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/delete_school_button"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="@color/colorQuaternary"
            android:text="DELETE" />

        <Button
            android:id="@+id/cancel_school_button"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="@color/colorQuaternary"
            android:visibility="gone"
            android:text="CANCEL" />

        <Button
            android:id="@+id/update_school_button"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="@color/colorAccent"
            android:visibility="gone"
            android:text="UPDATE" />

    </LinearLayout>

</RelativeLayout>
