<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity">

    <ScrollView
        android:id="@+id/event_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <TextView
                    android:text="Name: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/event_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp" />

                <EditText
                    android:hint="Name"
                    android:id="@+id/event_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:inputType="text"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <TextView
                    android:text="Date: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/event_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <TextView
                    android:text="Time: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/event_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <TextView
                    android:text="Uid: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/event_uid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/delete_event_button"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="@color/colorQuaternary"
            android:text="DELETE" />

        <Button
            android:id="@+id/toggle_event_button"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="TOGGLE" />

        <Button
            android:id="@+id/cancel_event_button"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="@color/colorQuaternary"
            android:visibility="gone"
            android:text="CANCEL" />

        <Button
            android:id="@+id/update_event_button"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="@color/colorTertiary"
            android:visibility="gone"
            android:text="UPDATE" />

    </LinearLayout>

</RelativeLayout>
